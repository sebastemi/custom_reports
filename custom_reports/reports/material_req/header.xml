<odoo>
    <data>
        <template id="report_material_request_order_header">
            <div class="header">
                <div class="row">
                    <div style="width:20%;" >
                        <img src="http://192.168.3.36:8069/custom_reports/static/src/bw_logo.jpg" alt="" style="width:150px;"/>
                    </div>
                    <div class="text-center" style="width:70%;display:table;margin-top:20px;">
                        <div class="col-3" style="display:table-cell;vertical-align: middle;text-align:center;">
                            <div style="border-bottom: 3px solid black; margin-top: 10px; margin-bottom: 10px;"></div>
                        </div>
                        <div class="col-6" style="display:table-cell;vertical-align: bottom;text-align:center;">
                            <b style="font-family:arial;display:inline-block;font-size:20px;">REQUISICIÓN DE MATERIALES</b>
                        </div>
                        <div class="col-3" style="display:table-cell;vertical-align: middle;text-align:center;">
                            <div style="border-bottom: 3px solid black; margin-top: 10px; margin-bottom: 10px;"></div>
                        </div>
                    </div>
                </div>
                <div class="row mt-2 px-4">
                    <div class="col-6"></div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-6" style="text-align:right;"><p>1. Fecha de Solicitud:</p></div>
                            <div class="col-6" style="border-bottom:1px solid #000;padding-left:5px;"><span t-field="doc.req_date" t-options='{"widget": "date", "format": "dd/MM/yyyy"}'/> </div>
                        </div>
                    </div>
                </div>
                <div class="row px-4 mt-2" >
                    <div class="col-6">
                        <div class="row">
                            <div class="col-4" style="text-align:right;"><p>2. Cliente:</p></div>
                            <div class="col-8" style="border-bottom:1px solid #000;padding-left:5px;"> <t t-esc="doc.req_client"/></div>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="row">
                            <div class="col-4" style="text-align:right;"><p>3. O/T:</p></div>
                            <div class="col-8" style="border-bottom:1px solid #000;padding-left:5px;"> <t t-esc="doc.req_ot"/></div>
                        </div>
                    </div>
                </div>
                <div class="row px-4 mt-2" >
                    <div class="col-6">
                        <div class="row">
                            <div class="col-4" style="text-align:right;"><p>4. Lanzamiento Nº:</p></div>
                            <div class="col-8" style="border-bottom:1px solid #000;padding-left:5px;"> <t t-esc="doc.req_serial"/></div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-4" style="text-align:right;"><p>5. Fecha Requerida:</p></div>
                            <div class="col-8" style="border-bottom:1px solid #000;padding-left:5px;"><span t-field="doc.req_expected_date" t-options='{"widget": "date", "format": "dd/MM/yyyy"}'/></div>
                        </div>
                    </div>

                </div>
            </div>
        </template>
    </data>
</odoo>