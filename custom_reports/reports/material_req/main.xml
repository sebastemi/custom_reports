<odoo>
    <data>
        <template id="report_material_request_order_main">
            <div class="container">
                <div class="row" style="font-family:Arial;font-size:10px;letter-spacing:2px;">
                    <style>
                        .report-table {
                            width: 100%;
                            border-collapse: collapse;
                            border: 1px solid #ccc;
                        }
                        .report-table th, .report-table td {
                            padding: 4px; /* Un padding base para todas las celdas */
                            vertical-align: middle; /* Alineación vertical para todas */
                            border: 1px solid #ccc; /* Un borde base para todas */
                        }
                        .report-table thead th {
                            background-color: #f2f2f2; /* Color de fondo para encabezados */
                            font-weight: bold;
                        }
                        .text-center { text-align: center; }
                        .text-right { text-align: right; }
                    </style>

                    <table class="report-table" style="table-layout:fixed;">
                        <thead>
                            <tr>
                                <th colspan="6" style="border: none; border-bottom:1px solid #ccc;"></th>
                                <th colspan="6" class="text-center">12. Certificado Requerido</th>
                                <th colspan="1" style="border: none; border-bottom:1px solid #ccc;"></th>
                            </tr>
                            <tr class="text-center">
                                <th style="width: 8%;">6. Item</th>
                                <th style="width: 8%;">7. Nivel</th>
                                <th style="width: 15%;">8. Código</th>
                                <th style="width: 24%;">9. Descripción del Material</th> <th style="width: 8%;">10. Cant.</th>
                                <th style="width: 10%;">11. Unid.</th>
                                <th style="width: 2%;">C</th>
                                <th style="width: 1%;">CC</th>
                                <th style="width: 1%;">CG</th>
                                <th style="width: 1%;">PP</th>
                                <th style="width: 1%;">PS</th>
                                <th style="width: 1%;">NA</th>
                                <th style="width: 20%;">13. Material Recibido Por</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.order_line" t-as="line">
                                <tr>
                                    <td class="text-center">
                                        <span t-esc="line_index + 1"/>
                                    </td>
                                    <td>N/A</td>
                                    <td>
                                        <span t-field="line.product_id.default_code"/>
                                    </td>
                                    <td>
                                        <span t-field="line.product_id.name"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_qty"/>
                                    </td>
                                    <td class="text-center"> <span t-field="line.product_uom.name"/>
                                    </td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>              
                </div>
            </div>
        </template>
    </data>
</odoo>