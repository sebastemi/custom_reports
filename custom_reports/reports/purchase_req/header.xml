<odoo>
    <data>
        <template id="report_purchase_request_order_header">
            <div class="header">
                <div class="row">
                    <div style="width:20%;" >
                        <img 
                            t-attf-src="/custom_reports/static/src/bw_logo.jpg" 
                            alt="Logo de la empresa" 
                            style="width:150px;"
                        />
                    </div>
                    <div class="text-center" style="width:70%;display:table;margin-top:20px;">
                        <b style="font-family:arial;display:inline-block;font-size:20px;">REQUISICIÓN DE COMPRAS</b>
                    </div>
                </div>
                <div class="row" style="margin-top:50px;font-family:arial;">
                    <div class="col-6">
                        <p><b>1. Lanzamiento / Requisición:</b> <t t-esc="doc.preq_serial"/></p>
                        <p><b>2. OT / Destino:</b> <t t-esc="doc.preq_ot"/></p>
                        <p><b>3. Cliente:</b> <t t-esc="doc.preq_client"/></p>
                    </div>
                    <div class="col-6">
                        <p><b>4. Fecha de Elaboración:</b> <span t-field="doc.preq_date" t-options='{"widget": "date", "format": "dd/MM/yyyy"}'/></p>
                        <p><b>5. Fecha Requerida:</b> <span t-field="doc.preq_expected_date" t-options='{"widget": "date", "format": "dd/MM/yyyy"}'/></p>
                        <div class="row">
                            <div class="col-6">
                                <b>6. Nacional: 
                                    <span class="text-center" style="display:inline-block;width:20px;height:20px;border:1px solid #000;box-sizing:border-box;">
                                        <t t-if="doc.preq_type == 'NACIONAL'">
                                            x
                                        </t>
                                    </span>
                                </b>
                            </div>
                            <div class="col-6">
                                <b>Importado: 
                                    <span  class="text-center" style="display:inline-block;width:20px;height:20px;border:1px solid #000;box-sizing:border-box;">
                                        <t t-if="doc.preq_type == 'IMPORTADO'">
                                            x
                                        </t>
                                    </span> 
                                </b>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo>